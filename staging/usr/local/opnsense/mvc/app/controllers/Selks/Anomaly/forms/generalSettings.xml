<form>
    <field>
        <id>anomaly.general.enabled</id>
        <label>Enabled</label>
        <type>checkbox</type>
        <help>Enable training anomaly model.</help>
    </field>
    <field>
        <id>anomaly.general.StopIters</id>
        <label>--stop-iters</label>
        <type>text</type>
        <help><![CDATA[Number of iterations to train.]]></help>
    </field>
    <field>
        <id>anomaly.general.StopEpisodeLen</id>
        <label>--stop-episode-len</label>
        <type>text</type>
        <help><![CDATA[Max length of episode to train.]]></help>
    </field>
    <field>
        <id>anomaly.general.StopTimesteps</id>
        <label>--stop-timesteps</label>
        <type>text</type>
        <help><![CDATA[Number of timesteps to train.]]></help>
    </field>
    <field>
        <id>anomaly.general.StopReward</id>
        <label>--stop-reward</label>
        <type>text</type>
        <help><![CDATA[Reward at which we stop training.]]></help>
    </field>
    <field>
        <id>anomaly.general.DataSource</id>
        <label>--data-source</label>
        <type>text</type>
        <help><![CDATA[Data sources to train, separate by comma (",").]]></help>
    </field>
    <field>
        <id>anomaly.general.BaseVersion</id>
        <label>--base-version</label>
        <type>text</type>
        <help><![CDATA[Base version to transfer learning.]]></help>
    </field>
</form>
