<model>
    <mount>//Selks/Anomaly</mount>
    <version>1.0.0</version>
    <description>
        SELKS Anomaly
    </description>
    <items>
        <rules>
            <rule type="ArrayField">
                <sid type="IntegerField">
                    <ValidationMessage>Sid should be a number.</ValidationMessage>
                    <Required>Y</Required>
                </sid>
                <enabled type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </enabled>
                <action type="OptionField">
                    <Required>Y</Required>
                    <default>alert</default>
                    <OptionValues>
                        <alert>Alert</alert>
                        <drop>Drop</drop>
                    </OptionValues>
                </action>
            </rule>
        </rules>
        <userDefinedRules>
            <rule type="ArrayField">
                <!--user defined rules -->
                <enabled type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </enabled>
                <source type="NetworkField">
                    <Required>N</Required>
                </source>
                <destination type="NetworkField">
                    <Required>N</Required>
                </destination>
                <fingerprint type="TextField">
                    <Required>N</Required>
                    <mask>/^([0-9a-fA-F:]){59,59}$/u</mask>
                    <ValidationMessage>A SSL fingerprint should be a 59 character long hex value.</ValidationMessage>
                </fingerprint>
                <description type="TextField">
                    <Required>Y</Required>
                    <mask>/^([\t\n\v\f\r 0-9a-zA-Z.\-,_\x{00A0}-\x{FFFF}]){1,255}$/u</mask>
                    <ValidationMessage>Description should be a string between 1 and 255 characters.</ValidationMessage>
                </description>
                <action type="OptionField">
                    <Required>Y</Required>
                    <default>alert</default>
                    <OptionValues>
                        <alert>Alert</alert>
                        <drop>Drop</drop>
                        <pass>Pass</pass>
                    </OptionValues>
                </action>
            </rule>
        </userDefinedRules>
        <files>
            <file type="ArrayField">
                <filename type="TextField">
                    <Required>Y</Required>
                    <mask>/^([\t\n\v\f\r\- 0-9a-zA-Z.,_\x{00A0}-\x{FFFF}]){1,255}$/u</mask>
                </filename>
                <filter type="OptionField">
                    <Required>N</Required>
                    <OptionValues>
                        <drop>Change all alerts to drop actions</drop>
                    </OptionValues>
                </filter>
                <enabled type="BooleanField">
                    <default>0</default>
                    <Required>Y</Required>
                </enabled>
            </file>
        </files>
        <fileTags>
            <tag type="ArrayField">
              <property type="TextField">
                  <Required>Y</Required>
                  <mask>/^([\t\n\v\f\r\- 0-9a-zA-Z.,_\x{00A0}-\x{FFFF}]){1,255}$/u</mask>
              </property>
              <value type="TextField">
                  <Required>N</Required>
                  <mask>/^([\t\n\v\f\r\- 0-9a-zA-Z.,_\x{00A0}-\x{FFFF}]){1,255}$/u</mask>
              </value>
            </tag>
        </fileTags>
        <preprocessingDatasets>
            <dataset type="ArrayField">
                <sid type="TextField">
                    <Required>Y</Required>
                </sid>
                <artifact type="TextField">
                    <Required>Y</Required>
                </artifact>
                <enabled type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </enabled>
                <action type="OptionField">
                    <Required>Y</Required>
                    <default>alert</default>
                    <OptionValues>
                        <alert>Alert</alert>
                        <drop>Drop</drop>
                    </OptionValues>
                </action>
            </dataset>
        </preprocessingDatasets>
        <trainingDatasets>
            <dataset type="ArrayField">
                <sid type="TextField">
                    <Required>Y</Required>
                </sid>
                <enabled type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </enabled>
                <action type="OptionField">
                    <Required>Y</Required>
                    <default>alert</default>
                    <OptionValues>
                        <alert>Alert</alert>
                        <drop>Drop</drop>
                    </OptionValues>
                </action>
            </dataset>
        </trainingDatasets>
        <testingDatasets>
            <dataset type="ArrayField">
                <sid type="TextField">
                    <Required>Y</Required>
                </sid>
                <enabled type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </enabled>
                <action type="OptionField">
                    <Required>Y</Required>
                    <default>alert</default>
                    <OptionValues>
                        <alert>Alert</alert>
                        <drop>Drop</drop>
                    </OptionValues>
                </action>
            </dataset>
        </testingDatasets>
        <inferringDatasets>
            <dataset type="ArrayField">
                <sid type="TextField">
                    <Required>Y</Required>
                </sid>
                <enabled type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </enabled>
                <action type="OptionField">
                    <Required>Y</Required>
                    <default>alert</default>
                    <OptionValues>
                        <alert>Alert</alert>
                        <drop>Drop</drop>
                    </OptionValues>
                </action>
            </dataset>
        </inferringDatasets>
        <general>
            <enabled type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </enabled>
            <DataSource type="TextField">
                <default>cic2018/*.csv</default>
                <Required>Y</Required>
            </DataSource>
            <StopIters type="IntegerField">
                <default>1000</default>
                <Required>N</Required>
                <MinimumValue>1</MinimumValue>
                <MaximumValue>9999999999</MaximumValue>
                <ValidationMessage>Enter a valid iterator number</ValidationMessage>
            </StopIters>
            <StopEpisodeLen type="IntegerField">
                <default>1000</default>
                <Required>N</Required>
                <MinimumValue>1</MinimumValue>
                <MaximumValue>9999999999</MaximumValue>
                <ValidationMessage>Enter a valid episode length</ValidationMessage>
            </StopEpisodeLen>
            <StopTimesteps type="IntegerField">
                <default>1000</default>
                <Required>N</Required>
                <MinimumValue>1</MinimumValue>
                <MaximumValue>9999999999</MaximumValue>
                <ValidationMessage>Enter a valid time steps</ValidationMessage>
            </StopTimesteps>
            <StopReward type="IntegerField">
                <default>100</default>
                <Required>N</Required>
                <MinimumValue>1</MinimumValue>
                <MaximumValue>9999999999</MaximumValue>
                <ValidationMessage>Enter a valid reward</ValidationMessage>
            </StopReward>
            <UpdateCron type="ModelRelationField">
                <Model>
                    <queues>
                        <source>OPNsense.Cron.Cron</source>
                        <items>jobs.job</items>
                        <display>description</display>
                        <filters>
                            <origin>/Anomaly/</origin>
                        </filters>
                    </queues>
                </Model>
                <ValidationMessage>Related cron not found.</ValidationMessage>
                <Required>N</Required>
            </UpdateCron>
        </general>
        <dataProcessor>
            <enabled type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </enabled>
            <DataSource type="TextField">
                <default>nsm/*.csv</default>
                <Required>Y</Required>
            </DataSource>
            <BatchSize type="IntegerField">
                <default>500</default>
                <Required>N</Required>
                <MinimumValue>1</MinimumValue>
                <MaximumValue>9999999999</MaximumValue>
                <ValidationMessage>Enter a valid batch size</ValidationMessage>
            </BatchSize>
            <BatchSizeSource type="IntegerField">
                <default>10</default>
                <Required>N</Required>
                <MinimumValue>1</MinimumValue>
                <MaximumValue>9999999999</MaximumValue>
                <ValidationMessage>Enter a valid batch size</ValidationMessage>
            </BatchSizeSource>
            <NumGpus type="NumericField">
                <default>0.4</default>
                <Required>N</Required>
                <MinimumValue>0</MinimumValue>
                <MaximumValue>9999999999</MaximumValue>
                <ValidationMessage>Enter a valid num of gpus</ValidationMessage>
            </NumGpus>
            <NumCpus type="NumericField">
                <default>0.1</default>
                <Required>N</Required>
                <MinimumValue>0</MinimumValue>
                <MaximumValue>9999999999</MaximumValue>
                <ValidationMessage>Enter a valid num of cpus</ValidationMessage>
            </NumCpus>
            <DataDestination type="TextField">
                <default>nsm</default>
                <Required>Y</Required>
                <ValidationMessage>Enter a valid data destination name</ValidationMessage>
            </DataDestination>
            <UpdateCron type="ModelRelationField">
                <Model>
                    <queues>
                        <source>OPNsense.Cron.Cron</source>
                        <items>jobs.job</items>
                        <display>description</display>
                        <filters>
                            <origin>/Anomaly/</origin>
                        </filters>
                    </queues>
                </Model>
                <ValidationMessage>Related cron not found.</ValidationMessage>
                <Required>N</Required>
            </UpdateCron>
            <UpdateTrainCron type="ModelRelationField">
                <Model>
                    <queues>
                        <source>OPNsense.Cron.Cron</source>
                        <items>jobs.job</items>
                        <display>description</display>
                        <filters>
                            <origin>/Anomaly/</origin>
                        </filters>
                    </queues>
                </Model>
                <ValidationMessage>Related cron not found.</ValidationMessage>
                <Required>N</Required>
            </UpdateTrainCron>
        </dataProcessor>
        <testing>
            <enabled type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </enabled>
            <DataSource type="TextField">
                <default>nsm/*.csv</default>
                <Required>Y</Required>
            </DataSource>
            <ServingUrl type="TextField">
                <default>http://selks.ddns.net:6789/anomaly</default>
                <Required>Y</Required>
                <ValidationMessage>Enter a valid serving url</ValidationMessage>
            </ServingUrl>
            <UpdateCron type="ModelRelationField">
                <Model>
                    <queues>
                        <source>OPNsense.Cron.Cron</source>
                        <items>jobs.job</items>
                        <display>description</display>
                        <filters>
                            <origin>/Anomaly/</origin>
                        </filters>
                    </queues>
                </Model>
                <ValidationMessage>Related cron not found.</ValidationMessage>
                <Required>N</Required>
            </UpdateCron>
        </testing>
        <inferring>
            <enabled type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </enabled>
            <DataSource type="TextField">
                <default>nsm/*.csv</default>
                <Required>Y</Required>
            </DataSource>
            <ServingUrl type="TextField">
                <default>http://selks.ddns.net:6789/anomaly</default>
                <Required>Y</Required>
                <ValidationMessage>Enter a valid inferring url</ValidationMessage>
            </ServingUrl>
            <UpdateCron type="ModelRelationField">
                <Model>
                    <queues>
                        <source>OPNsense.Cron.Cron</source>
                        <items>jobs.job</items>
                        <display>description</display>
                        <filters>
                            <origin>/Anomaly/</origin>
                        </filters>
                    </queues>
                </Model>
                <ValidationMessage>Related cron not found.</ValidationMessage>
                <Required>N</Required>
            </UpdateCron>
        </inferring>
    </items>
</model>
