/var/log/messages
/var/log/error
{
	rotate 4
	copytruncate
	olddir /cic/dataset/log/kern/
	hourly
	missingok
	notifempty
	compress
	delaycompress
	sharedscripts
	postrotate
		invoke-rc.d syslog-ng reload > /dev/null
	endscript
}
