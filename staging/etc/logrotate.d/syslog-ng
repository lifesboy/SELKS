/var/log/syslog
{
	rotate 7
	copytruncate
	olddir /cic/dataset/log/syslog/
	hourly
	missingok
	notifempty
	delaycompress
	compress
	postrotate
		invoke-rc.d syslog-ng reload > /dev/null
	endscript
}

