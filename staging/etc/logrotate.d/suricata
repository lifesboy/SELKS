/var/log/suricata/*.json /var/log/suricata/*.log {
	hourly
	rotate 60
	copytruncate
	olddir /cic/dataset/log/suricata/
	compress
	missingok
	notifempty
	dateext
	postrotate
	    /bin/kill -HUP $(cat /var/run/suricata.pid)
	endscript
}

# to see status
# cat /var/lib/logrotate/status
# to manually test - 
# logrotate --force /etc/logrotate.d/suricata
